<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#80d0d0d0"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/textlines"

        >

        <TableLayout
            android:id="@+id/tableDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:outlineSpotShadowColor="@color/black"

            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                            <TextView
                                android:id="@+id/textViewBookID"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:text="Time"
                                android:visibility="gone"
                                android:maxWidth="40dp"/>

                <TextView
                    android:id="@+id/textViewScheduleBarberName"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginEnd="1dp"
                    android:text="Barber Name"
                    android:maxWidth="100dp"
                    />

                <TextView
                    android:id="@+id/textViewWorkCustomerName"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_marginEnd="1dp"
                    android:text="Customer Name"
                    android:maxWidth="100dp"/>

                <TextView
                    android:id="@+id/textViewWorkService"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_marginEnd="1dp"
                    android:text="Customer Services"
                    android:maxWidth="100dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_column="4">
                    <TextView
                        android:id="@+id/textViewTime"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:maxWidth="100dp"/>
                    <Button
                        android:id="@+id/btnWorkStatus"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textAllCaps="false"
                        android:maxWidth="100dp"/>
                </LinearLayout>


            </TableRow>

        </TableLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>