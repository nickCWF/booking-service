<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".barber.barberProfileFragment">



        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:id="@+id/tableProfile"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:background="@color/grey"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_baseline_person_24" />
                    </LinearLayout>



                    <TextView
                            android:id="@+id/viewTextBarberID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tableProfile"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="20dp"
                            android:ems="10"
                            android:hint="Barber ID"
                            android:inputType="textPersonName"
                            android:textSize="16dp"
                            android:visibility="gone"/>


                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tableProfile"

                        android:layout_marginStart="45dp"
                        android:layout_marginTop="20dp"
                        android:text="Name:" />




                        <TableRow
                            android:id="@+id/tablebarberName"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_below="@+id/textView6"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="5dp">

                                <TextView
                                    android:id="@+id/viewTextBarberName"
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/barberName"
                                    android:textSize="16dp" />

                                <ImageButton
                                    android:id="@+id/btnImgEditBarberName"
                                    android:background="@color/grey"
                                    android:src="@drawable/ic_baseline_edit_24" />
                        </TableRow>

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tablebarberName"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="20dp"
                            android:text="Email:" />

                      <TableRow
                          android:id="@+id/tableBarberEmail"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/textView7"
                          android:layout_alignParentStart="true"
                          android:layout_marginStart="45dp"
                          android:layout_marginTop="5dp">

                              <TextView
                                  android:id="@+id/viewTextBarberEmail"
                                  android:layout_width="250dp"
                                  android:layout_height="wrap_content"
                                  android:hint="Email Address"
                                  android:textSize="16dp"
                                  app:layout_constraintBottom_toBottomOf="parent"
                                  app:layout_constraintTop_toTopOf="parent" />
                      </TableRow>

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tableBarberEmail"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="20dp"
                            android:text="Contact Number"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TableRow
                            android:id="@+id/tablebarberCN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView8"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="5dp">

                                <TextView
                                    android:id="@+id/viewTextBarberContactNumber"
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:hint="Phone Number"
                                    android:textSize="16dp" />

                                <ImageButton
                                    android:id="@+id/btnImgEditBarberContactNumber"
                                    android:background="@color/grey"
                                    android:src="@drawable/ic_baseline_edit_24" />
                        </TableRow>


                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tablebarberCN"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="20dp"
                            android:text="Salary" />

                        <TableRow
                            android:id="@+id/tableSalary"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_below="@+id/textView16"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="5dp">

                                <TextView
                                    android:id="@+id/viewTextBarberSalary"
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:text="Salary"
                                    android:inputType="textPersonName"
                                    android:textSize="16dp" />
                        </TableRow>

                    <Button
                        android:id="@+id/btnChangeProfile"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tableSalary"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Change Profile" />

                    <Button
                        android:id="@+id/btnApplyLeave"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btnChangeProfile"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Apply Leave" />

                    <Button
                        android:id="@+id/btnlogoutBarber"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btnApplyLeave"

                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:text="Logout" />


                </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>