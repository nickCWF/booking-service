<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".customer.customerProfileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/purple_500">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_person_24" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        >


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="20dp"
            android:text="Name" />

        <TextView
            android:id="@+id/viewTextCustomerName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="5dp"
            android:hint="Name"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewTextCustomerName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="20dp"
            android:text="Email" />


        <TextView
            android:id="@+id/viewTextCustomerEmail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="5dp"
            android:hint="Email Address"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewTextCustomerEmail"
            android:layout_alignParentStart="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="20dp"
            android:text="Contact Number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/viewTextCustomerContactNumber"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_alignParentStart="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="5dp"
            android:hint="Phone Number"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewTextCustomerContactNumber"
            android:layout_alignParentStart="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="20dp"
            android:text="Passwrod"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewCustomerPassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_alignParentStart="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="5dp"
            android:hint="Password"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnLogoutCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewCustomerPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:padding="15dp"
            android:text="Logout" />

        <ImageButton
            android:id="@+id/btnImgEditCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="59dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="32dp"
            android:layout_toEndOf="@+id/viewTextCustomerName"
            android:background="@color/purple_500"
            android:src="@drawable/ic_baseline_edit_24" />

        <ImageButton
            android:id="@+id/btnImgEditCustomerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnImgEditCustomerName"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="59dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="32dp"
            android:layout_toEndOf="@+id/viewTextCustomerEmail"
            android:background="@color/purple_500"
            android:src="@drawable/ic_baseline_edit_24" />

        <ImageButton
            android:id="@+id/btnImgEditCustomerContactNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnImgEditCustomerEmail"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="59dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="32dp"
            android:layout_toEndOf="@+id/viewTextCustomerEmail"
            android:background="@color/purple_500"
            android:src="@drawable/ic_baseline_edit_24" />

        <ImageButton
            android:id="@+id/btnImgEditCustomerPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnImgEditCustomerContactNumber"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="59dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="32dp"
            android:layout_toEndOf="@+id/textViewCustomerPassword"
            android:background="@color/purple_500"
            android:src="@drawable/ic_baseline_edit_24" />

    </RelativeLayout>

</FrameLayout>