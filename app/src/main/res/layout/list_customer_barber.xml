<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    app:cardMaxElevation="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/barberImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/Circle"
            app:srcCompat="@mipmap/ic_launcher_foreground" />

        <TextView
            android:id="@+id/customerBarberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/buttonBook"
            android:layout_toEndOf="@+id/barberImage"
            android:maxEms="20"
            android:maxLength="30"
            android:text="Barber Name"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/customerBarberEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customerBarberName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@+id/barberImage"
            android:maxEms="12"
            android:text="Barber Email" />

        <Button
            android:id="@+id/buttonBook"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="Book"
            android:textAllCaps="false"
            android:textSize="11dp" />

        <Button
            android:id="@+id/buttonDetails"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_below="@+id/buttonBook"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="Details"
            android:textAllCaps="false"
            android:textSize="11dp" />



    </RelativeLayout>


</androidx.cardview.widget.CardView>